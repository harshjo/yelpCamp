<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col">
            <h1 style="text-align: center;">Add a new comment to  <%= campground.name %></h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%=campground._id%>/comments " method="POST">
                    <div class="form-group">
                        <input type="text" name="comment[text]" placeholder="Text" class="form-control">
                    </div>
                    <!-- <div class="form-group">
                        <input type="text" name="comment[author]" placeholder="Author" class="form-control">                    
                    </div>  -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>                    
                    </div>
                </form>
                <a href="/campgrounds/<%=campground._id%>">Go Back</a>
            </div>
        </div>
    </div>
</div>  
<%- include('../partials/footer') %>