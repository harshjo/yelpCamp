<%- include('../partials/header')%>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 style="text-align: center;">Add a new Campground</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input type="text" name="camp_name" placeholder="Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="camp_image" placeholder="Image" class="form-control">                    
                    </div>
                    <div class="form-group">
                        <input type="number" name="camp_price" placeholder="Price" min="0.01" step="0.01" class="form-control">                    
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="5" name="camp_description" placeholder="Description"></textarea>
                    </div> 
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>                    
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer')%>