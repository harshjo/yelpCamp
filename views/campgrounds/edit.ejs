<%- include('../partials/header')%>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 style="text-align: center;">Edit <%= Campground.name %></h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%=Campground._id%>?_method=PUT " method="POST">
                    <div class="form-group">
                        <input type="text" name="campground[name]" value="<%= Campground.name %> " class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[image]" value="<%= Campground.image %> " class="form-control">                    
                    </div>
                    <div class="form-group">
                        <input type="number" name="campground[price]" value="<%= Campground.price %> " min="0.01" step="0.01" class="form-control">                    
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="campground[description]" value="<%= Campground.description %>">
                    </div> 
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>                    
                    </div>
                </form>
                <a href="/campgrounds/<%= Campground._id %>">Go Back</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer')%>